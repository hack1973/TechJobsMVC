<h1>@ViewBag.title</h1>

<div class="container body-content">

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                @if (ViewBag.selected == @column.Key)
                {
                    <span>
                        <input type="radio"
                               name="searchType"
                               id="@column.Key"
                               value="@column.Key"
                               checked />
                        <label for="@column.Key">@column.Value</label>
                    </span>
                }
                else
                {
                    <span>
                        <input type="radio"
                               name="searchType"
                               id="@column.Key"
                               value="@column.Key" />
                        <label for="@column.Key">@column.Value</label>
                    </span>
                }

            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" value="@ViewBag.searchTerm"/>
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @if (ViewBag.jobs != null)
    {
        <h3>@ViewBag.jobs.Count Result(s)</h3>

        <table class="job-listing">
            @foreach (var job in ViewBag.jobs)
            {
                <tr>
                    <th>Id:</th>
                    <th>@job.Id</th>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td>@job.Name</td>
                </tr>
                <tr>
                    <td>Employer:</td>
                    <td>@job.Employer</td>
                </tr>
                <tr>
                    <td>Location:</td>
                    <td>@job.Location</td>
                </tr>
                <tr>
                    <td>Position Type:</td>
                    <td>@job.PositionType</td>
                </tr>
                <tr>
                    <td>Skill:</td>
                    <td>@job.CoreCompetency</td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                </tr>
            }
        </table>
    }
</div>