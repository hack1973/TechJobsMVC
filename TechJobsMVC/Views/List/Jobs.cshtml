<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    <table class="job-listing">
        @foreach (var job in ViewBag.jobs)
        {
            <tr>
                <th>Id:</th>
                <th>@job.Id</th>
            </tr>
            <tr>
                <td>Name:</td>
                <td>@job.Name</td>
            </tr>
            <tr>
                <td>Employer:</td>
                <td>@job.Employer</td>
            </tr>
            <tr>
                <td>Location:</td>
                <td>@job.Location</td>
            </tr>
            <tr>
                <td>Position Type:</td>
                <td>@job.PositionType</td>
            </tr>
            <tr>
                <td>Skill:</td>
                <td>@job.CoreCompetency</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            </tr>
        }
    </table>
</div>